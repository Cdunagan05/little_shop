<div class='row'>
  <div class='col-md-4'>
    <%= link_to image_tag(item.image), item_path(item) %>
  </div>
  <div class='col-md-8'>
    <ul>
      <li>Name: <%= link_to item.title, item_path(item) %></li>
      <li>Description: <%= item.description %></li>
      <li>Price: <%= number_to_currency item.price %></li>
    </ul>
  </div>
</div>
