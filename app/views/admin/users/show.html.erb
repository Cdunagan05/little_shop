<div class='row'>
  <div class='col-md-6'>
    <h3> Admin Dashboard </h3>

    <h1>Welcome <%= current_user.username %></h1>
    <h3><%= link_to 'Create item', new_admin_item_path %></h3>
  </div>
  <div class ='col-md-6'>
    <%= render partial: 'status_count', locals: {orders: @orders} %>
  </div>
</div>

<div class='row'>
  <div class='col-md-8 text-center'><h3>Orders</h3></div><div class="col-md-4 dropdown">
 <button class="btn btn-secondary dropdown-toggle"
         type="button" id="filter_status" data-toggle="dropdown"
         aria-haspopup="true" aria-expanded="false">
   Filter Status
 </button>
 <div class="dropdown-menu" aria-labelledby="filter_status">
   <a class="dropdown-item" href="?status=all">All</a></br>
   <a class="dropdown-item" href="?status=ordered">Ordered</a></br>
   <a class="dropdown-item" href="?status=paid">Paid</a></br>
   <a class="dropdown-item" href="?status=completed">Completed</a></br>
   <a class="dropdown-item" href="?status=cancelled">Cancelled</a>
 </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <table>
      <% @orders.all_by_status(@status).each do |order| %>
        <tr class='<%= "order#{order.id}" %>' >
          <td><%= link_to "Order number #{order.id}", order_path(order) %></td>
          <% if order.ordered? %>
            <td>
              <%= link_to 'Cancel', admin_order_path(order.id, 'order[status]' => 'cancelled'), method: :put %>
              <!-- , :order[:status] => 2 -->
            </td>
            <td>
              <%= link_to 'Mark as paid', admin_order_path(order.id, 'order[status]' => 'paid'), method: :put %>
            </td>
          <% elsif order.paid? %>
            <td>
              <%= link_to 'Cancel', admin_order_path(order.id, 'order[status]' => 'cancelled'), method: :put %>
            </td>
            <td>
              <%= link_to 'Mark as completed', admin_order_path(order.id, 'order[status]' => 'completed'), method: :put %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
