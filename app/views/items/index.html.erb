<h1>All Items</h1>

<% @items.each do |item| %>
  <div>
    <ul>
      <li>Name: <%= item.title %></li>
      <li>Description: <%= item.description %></li>
      <li>Price: $<%= item.price %></li>
    </ul>
    <%= button_to "Add to Cart", cart_items_path(item_id: item.id), class: "btn btn-primary" %>
  </div>
<% end %>
