<h1>Order number <%= order.id %></h1>
<div>
  <h2> <%= order.user.name %> </h2>
  <h2> <%= order.user.address %> </h2>
</div>

<div>
  <h5>Order placed on <%= order.created_at %></h5>
  <% if order.cancelled? || order.completed? %>
    <h5>Order <%= order.status %> on <%= order.updated_at %></h5>
  <% end %>
</div>
